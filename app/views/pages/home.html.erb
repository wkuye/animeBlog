

    <div class="content" >
      <h1  class= "home-header">Home</h1>
      <div class="nav-card_container">
        <div class="nav-index0">
          <div class="media-wrapper">
            <img src="<%= home_image_main @int %>" alt="Description of image" class="anime_image">
            <div class="anime_video">
              <%= render partial: "shared/home_video_thumb", locals: {id:@int} %>
            </div>
          </div>
          <div class="anime_info">
            <h1><%= anime_details(@int)&.title %></h1>
            <p><%= truncate_after_second_period(anime_details(@int)&.description) %></p>
            
            <%=button_to "Learn More", anime_path(ids_to_slug(@int)), class:"btn learn-more", method: :get%>
