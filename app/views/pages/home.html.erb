      <img src="<%= news_thumb @news_int %>" alt="Description of image" class="news_image">
      <div class="news-thumb-info">
        <p><%=news_thumb_stamp @news_int%> ago</p>
        <h2><%=news_thumb_title @news_int%></h2>
        <div class="spacer"></div>
        <%=render partial: "shared/blob_button" ,locals: {title: "Read More"} %>
      </div>
