<div class="anime-card" style="width:170px; margin-bottom:30px;" data-id="<%= anime.id %>">
  <div class="anime-card-wrapper">
    <%= link_to anime_path(anime.slug), data: { turbo: false } do %> <!-- Donâ€™t try to do a frame visit; just load the full page normally. -->
      <img src="<%= anime.thumb_image %>" class="card-image">
      <div class="hover-video">
        <%= render partial: "shared/home_video_thumb", locals: { id: anime.id } %>
      </div>
    <% end %>
  </div>

  <div class="top-kon-rating">
    <%= content_tag(:i, " #{anime.rating}", class: "fas fa-star star-icon") %>
  </div>

  <h3><%= anime.title %></h3>
  <p><%= anime.year %></p>
</div>
