<%= link_to anime_path(anime.slug), data: { turbo: false }, class:"search-link" do %> 
<div class="catalog-card"  data-id="<%= anime.id %>">
   <%if current_user.has_role?(:site_admin)%>
  <%= button_to anime_path(anime), method: :delete, data: { turbo:false ,confirm: "Are you sure?" }, class: "delete-btn" do %>
  <%=content_tag(:i, "", class:"fa-solid fa-trash")%>
  <%end%>
<% end %>

  <div class="anime-card-wrapper">
    <!-- Donâ€™t try to do a frame visit; just load the full page normally. -->
      <img src="<%= anime.thumb_image %>" class="card-image">
      <div class="hover-video">
        <%= render partial: "shared/home_video_thumb", locals: { id: anime.id } %>
      </div>
   
  </div>

  <div class="top-kon-rating">
    <%= content_tag(:i, " #{anime.rating}", class: "fas fa-star star-icon") %>
  </div>

  <h3><%= anime.title %></h3>
  <p><%= anime.year %></p> 
  
</div>
<% end %>