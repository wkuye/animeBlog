<h2>Sign up</h2>
<div class="card" style="margin-top:20px">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card-body">
    <h6 style="margin-top: 30px;"><b><%= f.label :email %><br /></b></h6> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    
  </div>
  <div class="card-body">
    <h6 ><b><%= f.label :name %><br /></b></h6>
    <%= f.text_field :name%>
    
  </div>
  <div class="card-body">
   <h6><b> <%= f.label :username %><br /></b></h6>
    <%= f.text_field :username%>
    
  </div>
  <div class="card-body">
    <h6><b><%= f.label :password %><br /></b></h6>
    <%= f.password_field :password, autocomplete: "new-password" %>
    
    <% if params[:user] && params[:user][:password] && params[:user][:password].length < 6 %>
      <em>(Password must be at least 6 characters long)</em>
    <% end %>
  </div>
  

  <div class="card-body">
    <h6><b><%= f.label :password_confirmation %><br /></b></h6>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
 
    
  </div>
  <div class="d-flex justify-content-center align-items-center flex-column">
    <%= f.submit "Submit", class: "btn btn-dark mb-3" %>
    <%= render "devise/shared/links" %>
  </div>
  
  
<% end %>
</div>

