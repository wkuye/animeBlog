<div class="login-container">
  <div class="logo"><%=image_tag 'bleach.png'%></div>
  <div class="logo-1"><%=image_tag 'onepiece.png'%></div>
  <div class="logo-2"><%=image_tag 'naruto.png'%></div>
  <div class="logo-3"><%=image_tag 'dbz.png'%></div>
  <h2>Log in</h2>
 <div class="login-google">
 <%= content_tag(:i, " Login with Google", class:"fa-brands fa-google google", )%>
 </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="f-field">
    <%= f.label :email,         class: 'label'       %><br />
    <%= f.email_field :email,  class: 'input-field' %>
  </div>

  <div class="f-field">
    <div class="password-row">
      <%= f.label :password,      class: 'label'%>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:'fp-login'%>
    </div>
    
    <%= f.password_field :password, class: 'input-field' %>
  </div>

  
    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "Log in" ,id: "sign-up-btn", class:'login-btn'%>
    </div>
  <% end %>
  <div class="bottom-login">
    <p>Don't have an account?</p>
    <%= render "devise/shared/links" %>
  </div>

</div>

