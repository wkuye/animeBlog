
<div class="blog-show-body">
  <div class="admin-utils">
  <%= link_to "Back to blogs", blogs_path %>
  <%if current_user.has_role?(:site_admin) %>
     <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
  <%= button_to @blog, method: :delete, class:"delete-btn" do%>
  <%=content_tag(:i, "", class:"fa-solid fa-trash")%>
  <%end%>
  </div>
<%end%>
<div class="blog-title">
  <h1><%=@blog.title%></h1>

</div>
  <div class="author-section">
    <%=image_tag @blog.image, class:"blog-author-image"%>
    <p><%=@blog.author%></p>
    <p>.</p>
    <p><%=@blog.created_at.strftime("%B %e, %Y")%></p>
    <div class="spacer"></div>
    <p><%=@blog.read %></p>
  </div>
  <div class="blog-show-image">
     <%=image_tag @blog.blog_image_url%>
  </div>
  <div class="blog-text">
    <%=markdown(@blog.description)%>
  </div>

<div>
  <%unless current_user.is_a? GuestUser %>
   <%=render 'blogs/comments/comment_form' %>
<%end%>
</div>

  <div id="comments" data-blog-id="<%=@blog.id%>">
   <%=render @blog.comments %> 
  </div>
  
  <div class="back-top">
    <%=content_tag(:i, "", class:"fa-solid fa-chevron-up ar-up")%>
   <%=link_to  "#",  class:"back-top-link" do%>
     <%end%>
  </div>
 
</div>
